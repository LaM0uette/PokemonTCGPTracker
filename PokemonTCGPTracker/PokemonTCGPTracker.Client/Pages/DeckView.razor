@page "/deck"
@inherits DeckViewBase

<PageTitle>Deck</PageTitle>

<div class="deck-view-page">
    
    <div class="deck-cards">
        
        <div class="deck-cards-1">
            <img class="deck-cards-1__img" src="@DeckImageUrl" alt="deck cards 1">
        </div>
    
        <div class="deck-cards-2">
            <img class="deck-cards-2__img" src="@DeckImageUrl" alt="deck cards 2">
        </div>
        
        @*<div class="deck-energy">
            <img src="@DeckImageUrl" alt="deck energy">
        </div>*@
        
        <div class="deck-cards__border"></div>

    </div>

    
    <div class="deck-uploader">
        
        <InputFile OnChange="@OnFileSelected"/>
        
        <button class="deck-uploader__button"
                disabled="@(SelectedFile is null || IsUploading)"
                @onclick="UploadAsync">
            
            @(IsUploading ? "Uploadingâ€¦" : "Upload deck image")
            
        </button>
        
        @if (!string.IsNullOrEmpty(Message))
        {
            <span class="deck-uploader__message">@Message</span>
        }
        
    </div>
    
</div>